<UserControl x:Class="ExcelSP2.WpfTaskPaneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:ExcelSP2.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300"
             Background="White"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             FontFamily="Segoe UI">
    <UserControl.Resources>
        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Default Button Style -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EAEAEA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DADADA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Text Style -->
        <Style x:Key="SectionHeaderTitle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Header Icon Style -->
        <Style x:Key="SectionHeaderIcon" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#0078D7"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

    </UserControl.Resources>
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
            <StackPanel>
            
                <!-- Selection Section -->
                <StackPanel Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="&#xE722;" Style="{StaticResource SectionHeaderIcon}"/>
                    <TextBlock Text="{x:Static properties:Resources.Selection}" Style="{StaticResource SectionHeaderTitle}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button x:Name="btnCapture" Content="{x:Static properties:Resources.Capture}" Click="BtnCapture_Click"/>
                    <Button x:Name="btnPreview" Content="{x:Static properties:Resources.Preview}" Visibility="Collapsed" Click="BtnPreview_Click" MouseEnter="BtnPreview_MouseEnter" MouseLeave="BtnPreview_MouseLeave"/>
                    <Button x:Name="btnClearCapture" Content="&#xE711;" FontFamily="Segoe MDL2 Assets" Width="30" Padding="0" Visibility="Collapsed" Click="BtnClearCapture_Click" ToolTip="Clear Selection"/>
                    <Button x:Name="btnResetHeader" Content="&#xE894;" FontFamily="Segoe MDL2 Assets" Width="30" Padding="0" Visibility="Collapsed" Click="BtnResetHeader_Click" ToolTip="Reset Header Cache"/>
                </StackPanel>
                
                <TextBlock x:Name="lblSelectionInfo" Text="{x:Static properties:Resources.NoSelectionCaptured}" Foreground="#666666" TextWrapping="Wrap" Margin="0,4,0,0"/>
                
                <Popup x:Name="previewPopup" PlacementTarget="{Binding ElementName=btnPreview}" Placement="Left" AllowsTransparency="True">
                    <Border BorderBrush="#DDDDDD" BorderThickness="1" Background="White" Padding="1" CornerRadius="4">
                        <Image x:Name="previewPopupImage" Width="300" Height="300" Stretch="Uniform"/>
                    </Border>
                </Popup>
            </StackPanel>

            <!-- Context Materials Section -->
            <StackPanel Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="&#xE723;" Style="{StaticResource SectionHeaderIcon}"/>
                    <TextBlock Text="{x:Static properties:Resources.ContextMaterials}" Style="{StaticResource SectionHeaderTitle}"/>
                    
                    <!-- Action Buttons for Context -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="btnAddFile" Content="+" Width="24" Height="24" Padding="0" Click="BtnAddFile_Click" ToolTip="Add File"/>
                        <Button x:Name="btnClearContext" Width="24" Height="24" Padding="0" Click="BtnClearContext_Click" ToolTip="Clear Context" FontFamily="Segoe MDL2 Assets" Content="&#xE74D;"/>
                    </StackPanel>
                </StackPanel>

                <!-- Attachments List -->
                <ItemsControl x:Name="itemsAttachments" Margin="0,0,0,8">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#E6F0FF" Margin="0,0,6,6" Padding="6,4" CornerRadius="4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding FileName}" FontSize="11" Margin="0,0,6,0" MaxWidth="120" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                    <Button Content="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="10" Padding="2,0" Background="Transparent" BorderThickness="0" Foreground="#999999" Click="BtnRemoveAttachment_Click" Tag="{Binding FilePath}" Margin="0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Context Input -->
                <TextBox x:Name="txtContext" Height="100" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                         PreviewKeyDown="TxtContext_KeyDown" AllowDrop="True" PreviewDragEnter="Context_DragEnter" PreviewDrop="Context_DragDrop"/>
                
                <TextBlock Text="{x:Static properties:Resources.PasteImagesText}" Foreground="#999999" FontSize="11" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Prompt Section -->
            <StackPanel Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="&#xE90A;" Style="{StaticResource SectionHeaderIcon}"/>
                    <TextBlock Text="{x:Static properties:Resources.Prompt}" Style="{StaticResource SectionHeaderTitle}"/>
                </StackPanel>

                <!-- Prompt Controls -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox x:Name="cmbPrompts" Margin="0,0,8,0" SelectionChanged="CmbPrompts_SelectionChanged" DisplayMemberPath="Title" Height="26"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="btnSavePrompt" Content="{x:Static properties:Resources.Save}" Click="BtnSavePrompt_Click"/>
                        <Button x:Name="btnDeletePrompt" Click="BtnDeletePrompt_Click" ToolTip="Clear Prompt Text" FontFamily="Segoe MDL2 Assets" Content="&#xE74D;"/>
                    </StackPanel>
                </Grid>

                <TextBox x:Name="txtPrompt" Height="80" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,8"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                     <ToggleButton x:Name="toggleMode" Width="90" Height="24" Content="{x:Static properties:Resources.DataWrite}" Checked="ToggleMode_Checked" Unchecked="ToggleMode_Unchecked">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border" CornerRadius="12" Background="#E0E0E0" BorderBrush="#CCCCCC" BorderThickness="1">
                                                <Grid>
                                                    <Ellipse x:Name="knob" Width="18" Height="18" Fill="White" HorizontalAlignment="Left" Margin="2"/>
                                                    <TextBlock x:Name="text" Text="{x:Static properties:Resources.DataWrite}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="10" FontWeight="SemiBold" Foreground="#555555"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#FF9800"/>
                                                    <Setter TargetName="knob" Property="HorizontalAlignment" Value="Right"/>
                                                    <Setter TargetName="text" Property="HorizontalAlignment" Value="Left"/>
                                                    <Setter TargetName="text" Property="Margin" Value="8,0,0,0"/>
                                                    <Setter TargetName="text" Property="Text" Value="{x:Static properties:Resources.DataOp}"/>
                                                    <Setter TargetName="text" Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                    
                    <CheckBox x:Name="chkRefData" Content="{x:Static properties:Resources.ReferenceExistingData}" IsChecked="True" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="12" ToolTip="If checked, sends current data (Image+CSV) for cleaning/fixing."/>
                </StackPanel>
            </StackPanel>

            <!-- Macro Library Section -->
            <StackPanel Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="&#xE943;" Style="{StaticResource SectionHeaderIcon}"/>
                    <TextBlock Text="{x:Static properties:Resources.MacroLibrary}" Style="{StaticResource SectionHeaderTitle}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="cmbMacros" Width="140" Margin="0,0,8,0" SelectionChanged="CmbMacros_SelectionChanged" DisplayMemberPath="Title" Height="26"/>
                    <Button x:Name="btnRunMacro" Content="{x:Static properties:Resources.Run}" Background="#E8F5E9" BorderBrush="#C8E6C9" Foreground="#2E7D32" Click="BtnRunMacro_Click"/>
                    <Button x:Name="btnSaveMacro" Content="{x:Static properties:Resources.Save}" Click="BtnSaveMacro_Click" Visibility="Collapsed"/>
                    <Button x:Name="btnDeleteMacro" Content="Del" Click="BtnDeleteMacro_Click" Visibility="Collapsed"/>
                </StackPanel>
                
                <TextBox x:Name="txtMacroCode" Height="80" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12" Margin="0,8,0,0" Visibility="Collapsed"/>
                <TextBlock Text="{x:Static properties:Resources.VBENote}" Foreground="#999999" FontSize="11" Margin="0,4,0,0" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Footer / Settings & Run -->
            <StackPanel Margin="0,10,0,0">
                <Button x:Name="btnSettings" Content="{x:Static properties:Resources.Settings}" HorizontalAlignment="Left" Margin="0,0,0,16" Click="BtnSettings_Click" Padding="12,6"/>
                
                <Button x:Name="btnRun" Content="{x:Static properties:Resources.GenerateAndFill}" Height="42" Background="#0078D7" Foreground="White" FontWeight="SemiBold" FontSize="14" Click="BtnRun_Click" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#006CC1"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <TextBlock x:Name="lblStatus" Text="{x:Static properties:Resources.Ready}" Foreground="#0078D7" TextWrapping="Wrap" Margin="0,8,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
            
            </StackPanel>
        </ScrollViewer>
        
        <!-- Error Overlay -->
        <Grid x:Name="errorOverlay" Visibility="Collapsed" Background="#7F000000">
            <Border Background="White" Margin="40" CornerRadius="4" VerticalAlignment="Center" Padding="15" MaxHeight="500">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Error Occurred" FontWeight="Bold" FontSize="16" Foreground="#D32F2F"/>
                        <TextBlock x:Name="txtErrorMessage" Text="Error details here..." Foreground="#D32F2F" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        <TextBlock Text="Raw LLM Response:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    </StackPanel>
                    
                    <TextBox Grid.Row="1" x:Name="txtRawResponse" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" FontFamily="Consolas" FontSize="11" Background="#F5F5F5" Padding="5"/>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Copy Content" Click="BtnCopyErrorContent_Click" Background="#E0E0E0" Margin="0,0,10,0"/>
                        <Button Content="Close" Click="BtnCloseError_Click" Background="#D32F2F" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
